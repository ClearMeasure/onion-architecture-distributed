@using UI;
@using Core;

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>Iteration Zero</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer">

                <ul id="menu">
                    <li><a href="/home">Home</a></li>
                    <li><a href="/away">Away</a></li>
                    <li><a href="/from?where=home">From Home</a></li>
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            @{
                var partialName = Constants.Partials.VISITORS;
                var viewData = ViewData[Constants.ViewData.VISITORS];
            }

                @Html.Partial(partialName, viewData)
            </div>
        </div>
    </div>
</body>
</html>
